{
  "name": "graphics-element",
  "version": "1.9.0",
  "type": "module",
  "description": "A custom HTML <graphics-element>",
  "main": "dist/graphics-element.js",
  "homepage": "https://github.com/pomax/custom-graphics-element#readme",
  "bugs": {
    "url": "https://github.com/pomax/custom-graphics-element/issues"
  },
  "scripts": {
    "build": "rm -rf dist && npm run esbuild && npm run css && npm run types && node link-source.js",
    "css": "cp ./graphics-element/graphics-element.css dist && lightningcss --minify dist/graphics-element.css -o dist/graphics-element.css",
    "esbuild": "esbuild graphics-element/graphics-element.js  --bundle --outfile=./dist/graphics-element.js --format=esm --minify --keep-names --tree-shaking=false",
    "test": "npm run build && run-p serve open",
    "serve": "serve --cors",
    "types": "tsc && npm run types:compile",
    "types:compile": "cp graphics-element/base.d.ts dist && cat dist/*.ts > dist/graphics-element.d && rm dist/*.ts & mv dist/graphics-element.d dist/graphics-element.d.ts && npm run types:clean",
    "types:clean": "prettier dist/graphics-element.d.ts --write",
    "open": "open-cli \"http://localhost:3000\""
  },
  "author": "Pomax",
  "license": "MIT",
  "devDependencies": {
    "esbuild": "^0.19.10",
    "lightningcss-cli": "^1.24.0",
    "monaco-editor": "^0.45.0",
    "npm-run-all": "^4.1.5",
    "open-cli": "^8.0.0",
    "prettier": "^3.2.5",
    "serve": "^14.2.1",
    "typescript": "^5.4.2"
  }
}
