{
  "name": "graphics-element",
  "version": "2.1.0",
  "type": "module",
  "description": "A custom HTML <graphics-element>",
  "main": "dist/graphics-element.js",
  "homepage": "https://github.com/Pomax/custom-graphics-element#readme",
  "bugs": {
    "url": "https://github.com/Pomax/custom-graphics-element/issues"
  },
  "scripts": {
    "build": "rm -rf dist && run-s esbuild css types && node tools/link-source.js",
    "-": "---",
    "css": "cp ./graphics-element/graphics-element.css dist && lightningcss --minify dist/graphics-element.css -o dist/graphics-element.css",
    "--": "---",
    "esbuild": "esbuild graphics-element/graphics-element.js  --bundle --outfile=./dist/graphics-element.js --format=esm --minify --keep-names --tree-shaking=false",
    "---": "---",
    "test": "npm run build && run-p serve open watch",
    "watch": "node tools/watcher.js",
    "with-fallback": "npm run build && run-p serve open fallback",
    "----": "---",
    "serve": "serve --cors",
    "-----": "---",
    "fallback": "run-s fallback:*",
    "fallback:index": "node tools/fallback/generate-placeholders.js index.html --outdir graphics/fallback --write",
    "fallback:api": "node tools/fallback/generate-placeholders.js api.html --outdir graphics/fallback --write",
    "------": "---",
    "types": "run-s types:*",
    "types:remove": "rm -f dist/graphics-element.d.ts",
    "types:compile": "node ./tools/dts/dts.js",
    "types:assemble": "cp graphics-element/base.d.ts dist && cat dist/*.ts > dist/graphics-element.d && rm dist/*.d.ts && mv dist/graphics-element.d dist/graphics-element.d.ts",
    "types:clean": "prettier dist/graphics-element.d.ts --write && prettier api.html --write",
    "-------": "---",
    "open": "open-cli \"http://localhost:3000\""
  },
  "author": "Pomax",
  "license": "MIT",
  "devDependencies": {
    "@playwright/test": "^1.42.1",
    "esbuild": "^0.19.10",
    "glob": "^10.3.10",
    "lightningcss-cli": "^1.24.0",
    "marked": "^12.0.1",
    "monaco-editor": "^0.45.0",
    "npm-run-all": "^4.1.5",
    "open-cli": "^8.0.0",
    "playwright": "^1.42.1",
    "prettier": "^3.2.5",
    "serve": "^14.2.1"
  }
}
